
JAR=jar
JFLAGS=cvfm

BIN=bin/

BIN_DATUM=$(BIN)datum/
BIN_PARSER=$(BIN)parser/
BIN_SRV=$(BIN)srv/

MANIFEST=Manifest.mf
JAR_FILE=server.jar

# These files are generated by Eclipse
OBJ_FILES=$(BIN_DATUM)DeviceData.class $(BIN_DATUM)GroupData.class \
$(BIN_PARSER)MessageParser.class $(BIN_SRV)DirectoryServer.class \
$(BIN_SRV)GroupInfo.class $(BIN_SRV)RunClient.class

OBJ_FILES=$(SRC_FILES:.cpp=.o)

all: $(JAR_FILE)

$(JAR_FILE): $(MANIFEST) $(OBJ_FILES)
	$(JAR) $(JFLAGS) $(JAR_FILE) $(MANIFEST) -C $(BIN) .

clean:
	rm $(JAR_FILE)
